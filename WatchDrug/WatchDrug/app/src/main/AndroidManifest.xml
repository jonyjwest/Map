            android:label="@string/title_activity_pharmacy_details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.emedrep.reportthat.PlaceVisited.PlaceVisit"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_place_visit"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.emedrep.reportthat.PlaceVisited.ReportVisit"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_report_visit"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name="com.emedrep.reportthat.DrugReport2"
            android:label="@string/title_activity_drug_report2"
            android:theme="@style/AppTheme.NoActionBar"
