            android:name="com.emedrep.reportthat.CreatePassword"
            android:label="@string/title_activity_create_password"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.emedrep.reportthat.ForgotPassword"
            android:label="@string/title_activity_forgot_password"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateAlwaysHidden" />

        <service
            android:name="com.emedrep.reportthat.Service.PendingReportService"
            android:exported="false" />
        <service android:name="com.emedrep.reportthat.SyncHelper.ReportAuthenticatorService">
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator" />
            </intent-filter>

            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator" />
        </service>
        <service
            android:name="com.emedrep.reportthat.SyncHelper.ReportSyncService"
            android:exported="true">
            <intent-filter>
                <action android:name="android.content.SyncAdapter" />
            </intent-filter>

            <meta-data
                android:name="android.content.SyncAdapter"
                android:resource="@xml/syncadapter" />
        </service>

