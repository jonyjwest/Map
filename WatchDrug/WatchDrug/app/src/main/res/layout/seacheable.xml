<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout  android:layout_alignParentTop="true" android:id="@+id/lnProduct" android:layout_margin="15dp" android:visibility="gone"
            android:layout_width="match_parent" android:orientation="horizontal" android:background="@drawable/left_rounded_border"
            android:layout_height="wrap_content" android:padding="5dp">

            <EditText
                android:layout_weight="3"
                android:id="@+id/edtProduct" android:imeOptions="actionSearch"     android:layout_width="wrap_content"

                android:layout_height="wrap_content"  android:background="@android:color/transparent"
                android:drawableLeft="@android:drawable/ic_menu_search"

                android:hint="Search Location "  android:textAlignment="center"

                android:singleLine="true" />
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView android:id="@+id/txtInfo" android:visibility="gone"
            android:layout_width="match_parent" android:text="Nothing has been added here  ." android:layout_centerInParent="true" android:textAlignment="center"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="match_parent"  android:visibility="gone" android:id="@+id/btnAddPlaces" android:layout_marginTop="20dp"
            android:text="ADD LOCATION" android:textColor="@color/white"
            android:background="@drawable/default_button"
            android:layout_height="wrap_content" />
        </LinearLayout>
        <ListView android:id="@+id/listViewPlace" android:layout_margin="2dp"
            android:layout_width="fill_parent" android:dividerHeight="1dp" android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/lnProduct">
        </ListView>



</LinearLayout>