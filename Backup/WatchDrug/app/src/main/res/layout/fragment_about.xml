<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="fitCenter" android:alpha=".1"
        android:textAlignment="center"
        android:adjustViewBounds="false" android:src="@drawable/logo"/>



        <ScrollView android:layout_height="match_parent" android:layout_width="match_parent"
            android:textAlignment="center">

<LinearLayout
    android:layout_width="match_parent" android:orientation="vertical" android:layout_margin="12dp" android:gravity="center_horizontal"
    android:layout_height="match_parent">
         <ImageView
             android:layout_width="150dp" android:src="@drawable/logo"
             android:layout_height="150dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:lineSpacingExtra="5dp" android:textAlignment="center"
                android:layout_marginTop="0dp" android:text="Hello"
                android:id="@+id/txtabout_text"

                android:padding="10dp"


                android:paddingLeft="8dp" android:paddingTop="2dp"
                android:paddingRight="8dp" android:paddingBottom="8dp" android:gravity="center|left"
               />
</LinearLayout>
        </ScrollView>



</RelativeLayout>