<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    

    android:orientation="vertical">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content" android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" android:src="@drawable/image1"
        android:layout_gravity="center_horizontal" android:layout_marginTop="50dp" android:layout_marginBottom="15dp"
        android:paddingLeft="20dp" android:paddingRight="20dp"
        android:scaleType="fitCenter"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="5dp"

        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"

            android:src="@drawable/ic_fiber_manual_record_white_24dp" />

        <TextView
            android:id="@+id/textVffiew1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:paddingLeft="28dp"
            android:text="Download gospel Songs to your phone "
            android:textAlignment="center"
            android:textColor="@color/colorWhite"

            android:textSize="18sp" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_fiber_manual_record_white_24dp" />

        <TextView
            android:id="@+id/textViffewd1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:paddingLeft="28dp"
            android:text="Read lyrics while play songs "
            android:textAlignment="center"
            android:textColor="@color/colorWhite"


            android:textSize="18sp" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_fiber_manual_record_white_24dp" />

        <TextView
            android:id="@+id/textViffew1" android:textAlignment="gravity" android:gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:paddingLeft="28dp"

            android:text="Get more info about songs"

            android:textColor="@color/colorWhite"


            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="5dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_fiber_manual_record_white_24dp" />

        <TextView
            android:id="@+id/txtRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:paddingLeft="28dp"
            android:text="Rate and comment on songs"


            android:textColor="@color/colorWhite"
            android:textSize="18sp" />
    </RelativeLayout>
</LinearLayout>



